{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build Client Project",
                "Build Template Projects"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Library Project",
            "type": "process",
            "group": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "enlib/"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Client Project",
            "type": "process",
            "group": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "ent/"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Template Projects",
            "group": "build",
            "dependsOn": [
              "Build Empty Template Project"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Empty Template Project",
            "type": "process",
            "group": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "Templates/Package/enlib.tpl.Empty"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}