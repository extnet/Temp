{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build Client Project"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Run Website with Client Project",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "dependsOn": [ "Build Solution" ]
        },
        {
            "label": "Build Library Project",
            "type": "shell",
            "group": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "enlib/"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Client Project",
            "type": "shell",
            "group": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "ent/"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}