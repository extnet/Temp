@page
@model empty.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Ext.NET Core</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            padding: 24px
        }
        pre {
            margin: 24px 0;
        }
    </style>
</head>
<body>
    <div>
        <h2>Button</h2>

        <div>
            @Html.Button()
        <pre>&commat;Html.Button()</pre>
        </div>
        
        <div>
        <ext-button></ext-button>
        <pre>&lt;ext-button>&lt;/ext-button></pre>
        </div>
        
        <h2>Button Text</h2>
        
        <div>
            @Html.Button("Save")
        <pre>&commat;Html.Button("Save")</pre>
        </div>

        <div>
        <ext-button>Save</ext-button>
        <pre>&lt;ext-button>Save&lt;/ext-button></pre>
        </div>
    </div>
</body>
</html>
